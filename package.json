{
  "name": "website-next-boilerplate",
  "version": "0.0.0",
  "description": "A boilerplate for a website using Payload CMS and Next.js",
  "repository": "git@github.com:innovixx/website-next-boilerplate.git",
  "author": "Innovixx <support@innovixx.co.uk>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"stylelint\"  \"typed-scss-modules src --watch\"",
    "build": "stylelint && next build",
    "serve": "next start",
    "codegen": "cross-env TS_NODE_PROJECT=tsconfig.codegen.json graphql-codegen --config codegen.ts",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint-staged": "lint-staged --verbose",
    "stylelint": "stylelint \"**/*.scss\""
  },
  "dependencies": {
    "@apollo/client": "^3.7.16",
    "@apollo/react-hooks": "^4.0.0",
    "@lexical/list": "^0.17.0",
    "@lexical/rich-text": "^0.17.0",
    "@payloadcms/richtext-lexical": "^0.11.2",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "escape-html": "^1.0.3",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "lexical": "^0.17.0",
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "9.14.0",
    "@graphql-codegen/cli": "^2.16.4",
    "@graphql-codegen/client-preset": "^1.2.6",
    "@graphql-codegen/typescript": "^2.8.7",
    "@graphql-codegen/typescript-operations": "^2.5.12",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@innovixx/eslint-config": "^1.3.3",
    "@types/escape-html": "^1.0.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.14",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "9.14.0",
    "eslint-config-next": "^15.0.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-sort-export-all": "^1.4.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "husky": "^9.1.5",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.1.4",
    "sass": "^1.80.5",
    "stylelint": "^16.10.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.2",
    "stylelint-scss": "^6.8.1",
    "ts-node": "^10.9.2",
    "typed-scss-modules": "^8.0.1",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "**/*.scss": "stylelint --fix",
    "**/*.{js,ts,jsx,tsx}": [
      "eslint",
      "bash -c tsc"
    ]
  }
}