{
  "name": "website-next-boilerplate",
  "version": "0.0.0",
  "description": "A boilerplate for a website using Payload CMS and Next.js",
  "repository": "git@github.com:innovixx/website-next-boilerplate.git",
  "author": "Innovixx <support@innovixx.co.uk>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm watch:generate-types:styles\" \"next dev\" --hide=0",
    "build": "next build",
    "serve": "next start",
    "codegen": "cross-env TS_NODE_PROJECT=tsconfig.codegen.json graphql-codegen --config codegen.ts",
    "generate-types:styles": "typed-scss-modules src --outputFolder src/types/styles",
    "watch:generate-types:styles": "pnpm generate-types:styles --watch --logLevel=silent",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint-staged": "lint-staged --verbose",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/client": "^3.7.16",
    "@apollo/react-hooks": "^4.0.0",
    "@faceless-ui/collapsibles": "^1.1.5",
    "@faceless-ui/css-grid": "^1.2.1",
    "@faceless-ui/modal": "^2.0.2",
    "@faceless-ui/scroll-info": "^1.3.0",
    "@faceless-ui/slider": "^1.1.17",
    "@faceless-ui/window-info": "^2.1.2",
    "@innovixx/react-form-fields": "^0.0.8",
    "@lexical/list": "^0.17.0",
    "@lexical/rich-text": "^0.17.0",
    "@payloadcms/live-preview-react": "^3.19.0",
    "@payloadcms/richtext-lexical": "^3.9.0",
    "axios": "^1.7.9",
    "color": "^4.2.3",
    "dayjs": "^1.11.13",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.5",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "lexical": "^0.17.0",
    "next": "^15.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "7.49.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.16.4",
    "@graphql-codegen/client-preset": "^1.2.6",
    "@graphql-codegen/typescript": "^2.8.7",
    "@graphql-codegen/typescript-operations": "^2.5.12",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@innovixx/eslint-config": "^3.0.10",
    "@innovixx/stylelint-config": "^1.0.3",
    "@types/color": "^4.2.0",
    "@types/escape-html": "^1.0.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.14",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.1.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.4",
    "stylelint": "^16.19.1",
    "ts-node": "^10.9.2",
    "typed-scss-modules": "^8.1.0",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "**/*.scss": "stylelint",
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --quiet",
      "bash -c tsc"
    ]
  }
}